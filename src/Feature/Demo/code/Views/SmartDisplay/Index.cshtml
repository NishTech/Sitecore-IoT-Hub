@using IoTHub.Feature.Demo.Models
@using Sitecore.Mvc
@model __ProductEntry
@{
    Layout = null;
}
<!-- ======= About Us Section ======= -->
<section id="about-us" class="about-us padd-section wow fadeInUp smart-display" currentState="@Model.Name" pageMode="@(Sitecore.Context.PageMode.IsExperienceEditor ? "ExperienceEditor" : "Normal")">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-3">
                @Html.Sitecore().Field(__ProductEntry.FieldIds.Image.ToString(), Model.InnerItem, new{w=600})
            </div>
            <div class="col-md-7 col-lg-5">
                
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 0%;">5</div>
                </div>                

                <div class="about-content">
                    <h2>
                        <span>
                            @Html.Sitecore().Field(__ProductEntry.FieldIds.ProductName.ToString(), Model.InnerItem)
                        </span>
                    </h2>

                    @Html.Sitecore().Field(__ProductEntry.FieldIds.Description.ToString(), Model.InnerItem)

                    @if (Sitecore.Context.PageMode.IsExperienceEditor)
                    {
                        <pre>
                        @Html.Sitecore().Field(__ProductEntry.FieldIds.Features.ToString(), Model.InnerItem)
                        </pre>
                    }
                    else
                    {
                        <ul class="list-unstyled">
                            @foreach (var entry in Model.Features.Split(new[] {Environment.NewLine}, StringSplitOptions.RemoveEmptyEntries))
                            {
                                <li><i class="fa fa-angle-right"></i>@entry</li>
                            }
                        </ul>
                    }
                </div>
            </div>

        </div>
    </div>
</section><!-- End About Us Section -->